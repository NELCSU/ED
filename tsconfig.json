{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "checkJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": ["esnext.array", "esnext", "es2017", "dom", "es5"],
    "module": "none",
    "moduleResolution": "node",
    "noEmit": true,
    "removeComments": false,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "src/**/*.test.ts",
    "node_modules"
  ],
  "include": [
    "docs/js/*.*"
  ]
}
